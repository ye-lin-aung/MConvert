<?xml version="1.0" encoding="utf-8"?>

<FrameLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="top|center"
        android:orientation="vertical"
        >


        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="Myanmar Convert"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="20dp" />
<ScrollView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <View
            android:layout_width="fill_parent"
            android:layout_height="2dp" android:background="@color/colorMConvert"/>
        <LinearLayout android:orientation="horizontal"
            android:id="@+id/remove"
            android:background="@drawable/item_background"
            android:layout_width="fill_parent"
            android:layout_height="200dp"
             >
            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="130dp" android:src="@drawable/m_convert"
                android:layout_gravity="center" />

            </LinearLayout>
        <View
            android:layout_width="fill_parent"
            android:layout_height="2dp" android:background="@color/colorMConvert"/>

    <LinearLayout android:orientation="horizontal"
        android:id="@+id/setting"
        android:background="@drawable/item_background"
        android:layout_width="fill_parent"
        android:layout_height="200dp"
        >
        <ImageView
            android:layout_width="fill_parent"
            android:layout_gravity="center_vertical"

            android:layout_height="wrap_content" android:src="@drawable/edit"/>


    </LinearLayout>
        <View
            android:layout_width="fill_parent"
            android:layout_height="2dp" android:background="@color/colorMConvert"/>
</LinearLayout>
</ScrollView>
    </LinearLayout>

</FrameLayout>