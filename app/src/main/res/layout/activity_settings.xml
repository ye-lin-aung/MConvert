<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
android:background="@color/background_material_light"

    tools:context="com.plan.yelinaung.mmconvert.Settings">
<ScrollView
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
<LinearLayout
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

<LinearLayout
    android:layout_width="fill_parent"

    android:orientation="horizontal"
    android:weightSum="2"
android:background="@drawable/item_background"
android:paddingLeft="8dp"
    android:id="@+id/font_setting"
    android:paddingRight="8dp"
 android:divider="#444"
    android:showDividers="end"
    android:layout_height="50dp">
    <TextView
        android:layout_gravity="center_vertical"
        android:layout_width="0dp"
        android:text="Font"

        android:textSize="20sp"
        android:textColor="@color/primary_text_default_material_light"
        android:layout_weight="1"

        android:layout_height="wrap_content" />
    <TextView
        android:background="@drawable/item_background"
        android:layout_gravity="center_vertical"
        android:layout_width="0dp"
        android:gravity="right|center_vertical"
        android:textSize="15sp"
android:id="@+id/font"
        android:text="Our"
        android:layout_weight="1"
        android:textColor="@color/secondary_text_default_material_light"
        android:layout_height="wrap_content" />
</LinearLayout>
    <View
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:background="@color/colorMConvert" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:orientation="horizontal"
        android:weightSum="2"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:divider="#444"
        android:showDividers="end"

        android:layout_height="50dp">
        <SeekBar
            android:layout_gravity="center_vertical"
            android:layout_width="0dp"
            android:textSize="20sp"
            android:id="@+id/seekbar"
            android:textColor="@color/primary_text_default_material_light"
            android:layout_weight="1"
            android:textStyle="bold"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_gravity="center_vertical"
            android:layout_width="0dp"
            android:gravity="right|center_vertical"
            android:textSize="15sp"
android:id="@+id/size"
            android:text="Size :1"
            android:layout_weight="1"
            android:textColor="@color/secondary_text_default_material_light"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <View
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:layout_marginBottom="5dp"
        android:background="@color/colorMConvert" />


  <TextView
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:text="Testing Text"
      android:gravity="center_horizontal"
      android:textColor="@color/primary_text_default_material_light"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:weightSum="2"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <TextView
                android:gravity="center_horizontal"
                android:layout_gravity="center_vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Unicode"/>
    <EditText
android:id="@+id/zawgyi_test"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
android:layout_marginRight="5dp"
android:layout_weight="1"
android:text="ပေါ်လာမည့်စာသား"
android:editable="false"
        android:gravity="center"

        android:background="@drawable/square"

        /></LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <TextView
                android:gravity="center_horizontal"
                android:layout_gravity="center_vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Zawwgyi"/>
            <EditText
android:gravity="center"
                android:id="@+id/uni_test"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:editable="false"
                android:text="ေပၚလာမည့္စာသား"
                android:background="@drawable/square"
                /></LinearLayout>

    </LinearLayout>
    <View
        android:layout_marginTop="5dp"
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:background="@color/colorMConvert" />
    <RelativeLayout
        android:layout_width="fill_parent"
        android:orientation="horizontal"


        android:layout_height="wrap_content">

     <TextView

         android:gravity="left"
         android:layout_alignParentLeft="true"
         android:layout_width="wrap_content"
         android:layout_height="50dp"
         android:textSize="20sp"
android:id="@+id/text"
         android:layout_marginTop="7dp"
         android:textColor="@color/primary_text_default_material_light"
         android:text="Font Color          "
android:layout_marginLeft="8dp"
         />
        <com.plan.yelinaung.mmconvert.CustomViews.Circle
            android:layout_width="60dp"
android:layout_marginTop="7dp"
            android:layout_alignParentRight="true"
            android:layout_alignRight="@+id/text"
            android:layout_height="60dp"
            app:circle_color="@color/textView_color"
            app:dimen="20dp"

            app:border_color="@color/colorMConvert"
            app:shape="circle"
            android:id="@+id/fontc" />

        <com.plan.yelinaung.mmconvert.CustomViews.Circle
            android:layout_width="60dp"
android:layout_below="@+id/fontc"
            android:layout_height="60dp"
            app:circle_color="@color/colorMConvert"
            android:layout_marginTop="7dp"
            app:dimen="20dp"

            android:layout_alignParentRight="true"

            app:border_color="@color/colorMConvert"
            app:shape="circle"
            android:id="@+id/bgc" />
        <TextView
            android:layout_marginLeft="8dp"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:textSize="20sp"
            android:id="@+id/text2"
            android:layout_below="@id/fontc"

            android:textColor="@color/primary_text_default_material_light"
            android:text="Background Color"

            />


    </RelativeLayout>
    <View
        android:layout_marginTop="5dp"
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:background="@color/colorMConvert" />
    <LinearLayout
        android:layout_width="fill_parent"

        android:orientation="horizontal"
        android:weightSum="2"
        android:background="@drawable/item_background"
        android:paddingLeft="8dp"

        android:paddingRight="8dp"
        android:divider="#444"
        android:showDividers="end"
        android:layout_height="50dp">
        <TextView
            android:layout_gravity="center_vertical"
            android:layout_width="0dp"
            android:text="Service On/Off"
            android:textSize="20sp"
            android:textColor="@color/primary_text_default_material_light"
            android:layout_weight="1"

            android:layout_height="wrap_content" />
        <Switch

            android:layout_gravity="center_vertical"
            android:layout_width="0dp"
            android:gravity="right|center_vertical"
            android:id="@+id/service_switch"
            android:layout_weight="1"
            android:layout_height="wrap_content" />
        <ImageView
            android:layout_gravity="center_vertical"
android:id="@+id/info_service"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginRight="3dp"
            android:background="@drawable/info_clicked_two"/>
    </LinearLayout>
    <View

        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:background="@color/colorMConvert" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
    <Button
        android:id="@+id/default_btn"
        android:layout_marginLeft="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"  android:text="Reset Settings"
        />
    </LinearLayout>
    <View

        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:background="@color/colorMConvert" />
<View
    android:layout_width="fill_parent"
    android:layout_height="3dp"/>
</LinearLayout>


</ScrollView>
</LinearLayout>
